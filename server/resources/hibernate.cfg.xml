<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
            <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">org.mariadb.jdbc.Driver</property>
       <property name="hibernate.connection.url">jdbc:mysql://localhost/test2</property>
       <property name="hibernate.connection.username">user</property>
       <property name="hibernate.connection.password">bar</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <!--  <property name="hibernate.connection.datasource">java:comp/env/jdbc/mydb</property>-->
        <!-- Mapping with model class containing annotations -->
	<mapping class="edu.kit.pse.bdhkw.common.model.SimpleUser"/>
	<mapping class="edu.kit.pse.bdhkw.common.model.GpsObject"/>
	<mapping class="edu.kit.pse.bdhkw.server.model.GroupServer"/>
	<mapping class="edu.kit.pse.bdhkw.server.model.MemberAssociation"/>
	<mapping class="edu.kit.pse.bdhkw.common.model.Appointment"/>
    </session-factory>
</hibernate-configuration>